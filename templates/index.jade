extends layout

block content
  include author
  each article in articles
    article.article.intro
      header
        p.date
          span= moment.utc(article.date).format('YYYY-MM-DD')
        h2
          a(href=article.url)= article.title
      section.content.typo
        if article.intro.length > 0
          | !{ typogr(article.intro).typogrify() }
        if article.hasMore
          p.more
            a(href=article.url) 阅读全文 »

block prepend footer
  div.nav
    if prevPage
      a(href=prevPage.url) « Newer
    else
      a(href='/archive.html') « 归档
    if nextPage
      a(href=nextPage.url) 下一页 »



