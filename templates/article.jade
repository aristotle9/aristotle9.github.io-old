
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + " - "}

block header
  include author
  h1= page.title
  p.author
    | #{ "作者 " }
    mixin author(page.metadata.author)

block content
  article.article
    section.content.typo!= typogr(page.html).typogrify()

block prepend footer
  - var tags = env.helpers.getTagsFromArticle(page)
  if tags.length > 0
    .article-tag-row
      .tag-label 标签
      ul
        each tag in tags
          li
            a.articel-tag(href=env.helpers.getTagHome(tag).url)= tag
  div.nav
    a(href=contents.index.url) « 返回首页
  include disqus


